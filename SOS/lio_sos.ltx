       \ |\  \Lv\ v\ E                    
       \ |\  \ifel{E}{e}{e}
       \ |\  \letbind{x}{E}{e}
       \ |\  \pi_i\ E                     
       \\
&&&    \ |\  \return\ E                 
       \ |\  E\ \diamond\ e                
       \ |\  v\ \diamond\ E, \textrm{where }\diamond = \{\bind, \lub, \glb\}
       \\
\\
%
&&&\defST{E[(\lambda x.e_1)\ e_2]} \longrightarrow \defST{E[[e_2/x]e_1]}
\tag{E-App}\\
%
&&&\defST{E[\fix\ e]} \longrightarrow \defST{E[e\ (\fix\ e)]} \tag{E-Fix}\\
%
&&&\defST{E[\ifel{\true}{e_1}{e_2}]}\longrightarrow \defST{E[e_1]}
\tag{E-IfTrue}\\
%
&&&\defST{E[\ifel{\false}{e_1}{e_2}]} \longrightarrow \defST{E[e_2]}
\tag{E-IfFalse}\\
%
&&&\defST{E[\letbind{x}{e_1}{e_2}]} \longrightarrow \defST{E[[e_1/x]e]}
\tag{E-Let}\\
%
&&&\defST{E[\pi_i\ (e_1,e_2)]}\longrightarrow \defST{E[e_i]}\tag{E-Proj}\\
%
&&&\defST{E[\return\ e]}\longrightarrow \defST{E[\Lv\ \lpure\ e]}\tag{E-Ret}\\
%
&&&\inferrule
                        {e_2 \ne \Lv\ e_1^\prime\ e_2^\prime}
% --------------------------------------------------------------------------
{\defST{E[\Lv\ l_1\ e_1\ \bind\ \lambda x.e_2]}
   \longrightarrow \defST{E[[e_1/x]e_2\ \bind\ \lambda x.\Lv\ l_1\ x]}}
\tag{E-Bind}\\
%
&&&\defST{E[\Lv\ l_1\ e_1\ \bind\ \lambda x.\Lv\ l_2\ e_2]}
